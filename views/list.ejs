<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>ToDo List</title>
</head>
<body>
    <header id="heading">
        <h1>ToDo List Web App</h1>
    </header>
    <div class="box">
        <h2 class="heading">To Do List</h2>
    </div>

    <div class="box">
       <% for(var i=0; i < ejes.length; i++){ %>
        <div class="item">
            <input type="checkbox" name="" id="">
            <p><%= ejes[i] %></p>
        </div>
       <% } %>

        <form action="/" method="POST">
            <input type="text" name="ele1" id="" placeholder="Enter the task">
            <button type="submit">+</button>
        </form>
    </div>

    <footer>
        <span>All Rights Reserved &copy; 2025</span>
    </footer>
</body>
</html>